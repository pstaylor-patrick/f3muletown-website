{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["workouts"],
  "properties": {
    "workouts": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["ao", "style", "location", "day", "time"],
        "properties": {
          "ao": {
            "type": "string"
          },
          "style": {
            "type": "string",
            "enum": [
              "Murph",
              "Beatdown",
              "Run",
              "Trail Run",
              "Ruck",
              "Rucks & Sandbags",
              "Weight Lifting",
              "3rd F (Faith)"
            ]
          },
          "location": {
            "type": "object",
            "required": ["href", "text"],
            "properties": {
              "href": {
                "type": "string",
                "format": "uri"
              },
              "text": {
                "type": "string"
              }
            }
          },
          "day": {
            "type": "string",
            "enum": [
              "Monday",
              "Tuesday",
              "Wednesday",
              "Thursday",
              "Friday",
              "Every Third Friday",
              "Saturday",
              "All Saturdays Except the Last of the Month",
              "Sunday"
            ]
          },
          "time": {
            "type": "string",
            "enum": [
              "5:15 AM - 6:15 AM",
              "5:20 AM - 6:15 AM",
              "5:25 AM - 6:15 AM",
              "5:30 AM - 6:15 AM",
              "6:00 AM - 7:00 AM"
            ]
          }
        }
      }
    }
  }
}
